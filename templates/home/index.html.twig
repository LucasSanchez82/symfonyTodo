{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Bienvenue sur todo maker !</h1>
		<form method='GET'>
			<input type='search' name='search' placeholder='Rechercher une todo' autofocus>
			<button type='submit'>üîé Rechercher üîç</button>
		</form>
		<select id="select"></select>
		<ul>
			<a href="{{ path('add_todo') }}">
				<li>Ajouter une todo</li>
			</a>
		</ul>

		<table class='todo-table'>
			<thead>
				<tr>
					<th>Titre</th>
					<th>Description</th>
					<th>Fait ?</th>
					<th>Modifier</th>
					<th>Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for todo in todos %}
					<tr>
						<td>{{ todo.title }}</td>
						<td>{{ todo.description }}</td>
						<td>{{ todo.finished ? "‚úÖ" : "‚ùå"}}</td>
						<td>
							<a href="{{ path('edit_todo', {'id': todo.id}) }}">
								Editer
							</a>
						</td>

						<td>
							<a class='remove-button' href="{{ path('remove_todo', {'id': todo.id}) }}">
								Supprimer
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
